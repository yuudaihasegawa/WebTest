<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>カテゴリー</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% @categories.each do |category| %>
        <%= link_to category_path(category),class:"btn btn-primary btn-sm" do %>
          <%= category.name %>
          (<%= category.post_categories.count %>)
        <% end %>
      <% end %>
    </div>
  </div>
</div>