<div class="container">
  <% @posts.each do |post| %>
    <div class="post-index">
      <div class="row">
        <div class="col-3">
          <%= attachment_image_tag post.user, :profile_image_id, size: "100x100", fallback: "no_image.jpg" %>
        </div>
        <div class="col-9">
          <h2><%= post.title %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= post.text %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 text-right">
          <%= post.user.name %>
          <%= post.created_at %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 text-right">
          <%# <%= post.responses.count %> 
          <% post.categories.each do |category| %>
            <%= category.name %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>